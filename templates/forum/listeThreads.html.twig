{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10">
            {% for thread in threads %}
                <div class="list-group list-group-flush mt-3">
                    <div class="list-group-item ">
                        <div class="d-flex w-100 justify-content-between mt-1">
                            <a href="{{ path("liste-messages", {'id': thread.id}) }}"><h5 class="mb-1">{{ thread.subject }} - Num√©ro {{ thread.id }}</h5></a>
                            <small>Auteur : {{ thread.author }}</small>
                        </div>
                    </div>
                    <div class=" d-flex w-100 justify-content-between">
                        <p class="list-group-item list-group-item-action mb-1">{{ thread.text }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}