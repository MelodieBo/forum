{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 mt-4 justify-content-center">
                <h1>Thread {{ thread.subject }} - Num√©ro {{ thread.id }}</h1>
                <table class="table table-hover">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">Subject</th>
                            <th scope="col">Author</th>
                            <th scope="col">Texte</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Option</th>
                        </tr>
                    </thead>
                    {% for message in messages %}
                    <tbody>
                        <tr class="table-light">
                            <th scope="row">{{ message.subject }}</th>
                            <td>{{ message.author }} {{ message.email }} </td>
                            <td>{{ message.text }}</td>
                            <td>{{ message.createdAt | date("d/m/Y") }}</td>
                            <td>
                                <a href="{{ path("detailsMessage", {'id': message.id}) }}">
                                    <button type="button" class="btn btn-primary">Voir</button>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                    {% endfor %}
                </table> 
            </div>
        </div>
    </div>
{% endblock %}